class Solution {
    public String finalString(String s) {
        String ans="";
     for(int i=0;i<s.length();i++)  {
        if(s.charAt(i)=='i'){
            StringBuilder sb= new StringBuilder(ans);
            ans=sb.reverse().toString();
        }
        else
        ans+=s.charAt(i);
     } 

   return ans;
    }
}
