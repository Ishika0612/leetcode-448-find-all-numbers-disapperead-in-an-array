class Solution {
    public String toLowerCase(String s) {
        StringBuilder sb=new StringBuilder();
       for(int i=0;i<s.length();i++){
        if(s.charAt(i)>='A' && s.charAt(i)<='Z'){
           char ch=(char)((int)s.charAt(i)+32);
           sb.append(ch);
        }
        else
        sb.append(s.charAt(i));
       }
       return sb.toString();
    }
}
